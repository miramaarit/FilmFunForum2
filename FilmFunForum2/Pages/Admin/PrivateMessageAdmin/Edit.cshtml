@page
@model FilmFunForum2.Pages.Admin.PrivateMessageAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PrivateMessage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrivateMessage.Id" />
            <div class="form-group">
                <label asp-for="PrivateMessage.Text" class="control-label"></label>
                <input asp-for="PrivateMessage.Text" class="form-control" />
                <span asp-validation-for="PrivateMessage.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateMessage.UserId" class="control-label"></label>
                <input asp-for="PrivateMessage.UserId" class="form-control" />
                <span asp-validation-for="PrivateMessage.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateMessage.RecipientId" class="control-label"></label>
                <input asp-for="PrivateMessage.RecipientId" class="form-control" />
                <span asp-validation-for="PrivateMessage.RecipientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateMessage.Date" class="control-label"></label>
                <input asp-for="PrivateMessage.Date" class="form-control" />
                <span asp-validation-for="PrivateMessage.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
